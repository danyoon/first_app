<%= simple_form_for @hotel, html: {id: 'hotel-form'} do |f| %>
  <legend>
    Add Property
  </legend>

  <fieldset>
    <%= f.input :country, :as => :select, :collection => [['Argentina','AR'],['Brazil','BR'],['Uruguay','UY']] %>    
    <%= f.input :city, as: 'String' %>
    <%= f.input :name %>
    <%= f.input :address %>
    <%= f.input :zipcode, as: 'String' %>
    <%#= f.input :country, as: 'String' %>    
    <%#= f.input :mainstreet %>
    <%#= f.input :crossstreet %>
    <%#= f.input :key %>
    <%#= f.input :owner %>
    <%#= f.input :hotelID %>
  </fieldset>

  <%= f.button :submit %>
<% end %>
