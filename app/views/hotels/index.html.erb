<% provide(:title, 'All hotels') %>
<div class="row">
  <aside class="span4">
    <section>
      <%= render 'shared/user_info' %>
    </section>
    <section>
      <%= render 'shared/stats' %>
    </section>
    <% if current_user.admin == TRUE %>
      <section>
      <%= form_tag import_hotels_path, multipart: true do %>
        <%= file_field_tag :file %>
        <%= submit_tag "Load from CSV", class: "btn btn-large" %>
    <% end %>
  <% end %>
    <%= link_to "Export to CSV", hotels_path(format: "csv"), class: "btn btn-large" %>
    </section>
  </aside>
  <div class="span8">
    <h1>All hotels</h1>
    <ul class="hotels">
      <%= render @hotels %>
    </ul>
    <%= will_paginate %>
  </div>
</div>

