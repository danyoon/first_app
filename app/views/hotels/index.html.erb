<% provide(:title, 'Hotel Directory') %>
<div class="container">
  <% if current_user.admin == TRUE %>
    <div class="btn-group btn-group-justified">
    <%= form_tag import_hotels_path, multipart: true do %>
      <%= file_field_tag :file %>
      <%= submit_tag "Load from CSV", class: "btn" %>
      <%= link_to "Export to CSV", hotels_path(format: "csv"), class: "btn" %>
    <% end %>
    </div>
  <% end %>
  <table class="table table-bordered">
    <%= render @hotels %>
  </table>
  <%= will_paginate @hotels %>
</div>

