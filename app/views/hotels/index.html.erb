<% provide(:title, 'Hotel Directory') %>
<div class="container">
  <% if current_user.admin == TRUE %>
    <div class="pull-left">
    <%= form_tag import_hotels_path, multipart: true do %>
      <%= file_field_tag :file, class:"span2" %>
    <%= submit_tag "Load Database from CSV", class: "btn btn-primary span2" %>
  <% end %>
  </div>
  <div class="pull-right">
    <%= link_to "Add Hotels", "", class:"btn btn-primary span3"%>
    <br>
    <br>
    <%= link_to "Export Database to CSV", hotels_path(format: "csv"), class: "btn btn-primary span2" %>
  </div>
<% end %>
  <br>
  <br>
  <table class="table table-bordered">
    <thead>
      <tr>
        <th>Name</th>
        <% if current_user.admin == TRUE %>
          <th>Edit</th>
      <% end %>
        <th>Connect</th>
      </tr>
    </thead>
    <tr>
      <td>Hotel1</td>
      <% if current_user.admin == TRUE %>
        <td><%= link_to "Edit Hotel", "", class: "btn btn-primary"%></td>
    <% end %>
      <td><%= link_to "Connect To Hotel", "", class: "btn btn-primary"  %></td>
    </tr>
  </table>
</div>

