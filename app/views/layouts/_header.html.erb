<header class="navbar navbar-fixed-top">
  <div class="navbar-inner">
    <div class="container">
      <div class="nav">
        <%= link_to "THOUSANDSOFT - Searching Around the World Through Maps", root_path, id: "logo" %>
      </div>
      <div class="nav pull-right">
         <%= link_to image_tag("facebookbig.png", alt: "Sign in with Facebook") + "Sign in", user_omniauth_authorize_path(:facebook), class: "btn btn-link" %>
      <%= link_to image_tag("googlebig.png", alt: "Sign in with Google") + "Sign in", user_omniauth_authorize_path(:google_oauth2), class: "btn btn-link" %>
      <%= link_to image_tag("emailbig.png", alt: "Sign in with Email") + "Sign in", signin_path, class: "btn btn-link" %>
      </div>
    </div>
  </div>
</header>
<div class="container">
  <div class="well">
    <% if user_signed_in? %>
      <%= render 'shared/top_loggedin' %> 
    <% else %>
      <%= render 'shared/top_main' %> 
    <% end %>
  </div>
</div>

