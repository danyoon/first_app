<% provide(:title, @user.name) %>
<div class="row">
  <aside class="span4">
    <section>
      <%= gravatar_for @user, size: 52 %>
      <h1>
        <%= @user.name %>
        <%= render 'follow_form' if signed_in? %>
      </h1>
    </section>
    <section>
      <%= render 'shared/stats' %>
    </section>
  </aside>
  <div class="span8">
    <% if @user.microposts.any? %>
      <h1>Microposts (<%= @user.microposts.count %>)</h1>
      <%= will_paginate @microposts %>
      <ol class="microposts">
        <%= render @microposts %>
      </ol>
      <%= will_paginate @microposts %>
    <% end %>
  </div>
</div>
