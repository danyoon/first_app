<% provide(:title, @title) %>
<div class="row">
  <aside class="span4">
    <section>
      <%= gravatar_for @user %>
      <h1><%= @user.name %></h1>
      <span><%= link_to "view my profile", @user %></span>
      <span><b>Microposts:</b> <%= @user.microposts.count %></span>
    </section>
    <section>
      <%= render 'shared/stats' %>
      <% if @hotels.any? %>
        <div class="user_avatars">
          <% @hotels.each do |hotel| %>
            <%= link_to image_tag(hotel.image, :size => "160x100"), hotel %>
          <% end %>
        </div>
      <% end %>
    </section>
  </aside>
  <div class="span8">
    <h1><%= @title %></h1>
    <% if @hotels.any? %>
      <ul class="hotels">
        <%= render @hotels %>
      </ul>
      <%= will_paginate %>
    <% end %>
  </div>
</div>
