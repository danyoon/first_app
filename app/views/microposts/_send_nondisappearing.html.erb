<%= form_for (@micropost) do |f| %>
  <%= hidden_field_tag :tofinal %>
  <%= hidden_field_tag :subjectfinal %>
  <%= hidden_field_tag :messagefinal %>
  <%= f.submit "Send Nondisappearing Message", onclick:'update();', class: 'btn btn-lg btn-info' %>
<% end %>
<script>
function update() {
  $('#tofinal').val($('#to').val());
  $('#subjectfinal').val($('#subject').val());
  $('#messagefinal').val($('#message').val());
}
</script>
