<%= form_for (@micropost) do |f| %>
  <%= hidden_field_tag :tofinal %>
  <%= hidden_field_tag :subjectfinal %>
  <%= hidden_field_tag :messagefinal %>
  <%= f.submit "Send Nondisappearing Message", id:'submitbutton', class: 'btn btn-lg btn-info' %>
<% end %>
<script>
$(function(){
  $('submitbutto').observe('click', update);
}

function update() {
  $("#tofinal").val($('#to').val());
  $('#subjectfinal').val($('#subject').val());
  $('#messagefinal').val($('#message').val());
}
</script>
