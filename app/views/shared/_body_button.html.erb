<div class="thumbnail" style="height: 400px">
  <% owners = Hotel.uniq.pluck(:owner) %>
  <% owners.in_groups_of(2).each do |owner_row|  %>
    <div class ="row">
      <div class="btn-group btn-group-lg btn-group-justified">
        <% owner_row.each do |owner| %>
          <%= link_to owner, root_path, class:"btn btn-default", id:"companyLabel" %> 
      <% end %>
    </div>
  </div>
  <% end %>
</div>
<div class="carousel-caption">
</div>

<script>
$(function(){
   getURL();
});

function getURL() {
  var label = $('#companyLabel');

  label.text("hey hey >>>");
  label.attr('href', "/company/" + owner.match(/\(([^)]+)\)/)[1]);
}


</script>
