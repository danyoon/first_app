<tr>
  <td>
    <%#= image_tag(hotel.image, :size => "50x50") %>
    <%= hotel.name %>
  </td>
  <td>
    <%= hotel.address %>    
  </td>
  <td>
    <%= hotel.city %>
  </td>
  <td>
    <%= hotel.zipcode.to_s %>
  </td>
  <td>
    <%#= hotel.mainstreet %>
    <%#= hotel.crossstreet %>
  </td>
  <td>
    <%= hotel.key %>
  </td>
  <td>
    <%= hotel.owner %>
  </td>
  <td>
    <%= render 'hotels/connect_form', hotel: hotel  %>
    <%= link_to "Details", hotel %>
  </td>
</tr>

