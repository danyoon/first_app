<% provide(:title, "Sign in") %>
<h1>Sign in</h1>

<div class="row">
  <div class="span6 offset3">
    <% if user_signed_in? %>
        <h1>Welcome to ThousandSoft</h1>
    <% else %>
      <a href="/auth/twitter" class="auth_provider">
      <%= image_tag "twitter.png", :size => "64x64", :alt => "Twitter" %>Twitter</a>
    <a href="/auth/facebook" class="auth_provider">
      <%= image_tag "facebook.png", :size => "64x64", :alt => "Facebook" %>Facebook</a>
    <div class="clear"></div>
    <%= form_tag "/auth/identity/callback" do %>
      <div class="field">
      <%= label_tag :auth_key, "Email" %><br>
      <%= text_field_tag :auth_key %>
    </div>
    <div class="field">
      <%= label_tag :password %><br>
      <%= password_field_tag :password %>
    </div>
    <div class="actions"><%= submit_tag "Login" %></div>
  <% end %>
    <p>New user? <%= link_to "Sign up now!", signup_path %></p>
  <% end %>
  </div>
</div>
